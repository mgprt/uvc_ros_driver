<launch>

  <arg name="numberOfCameras" default="10" />
  <arg name="calibrationMode" default="false" doc="calibrationMode false: output frames at full frequency, true: output frames at reduced frequency" />
  <arg name="cameraConfigFile" default="/media/camera/calibration.yaml" doc="The (kalibr) calibration file for the rig. Per default tries to load from the camera board storage" />
  <arg name="homographyMapping" default="$(find uvc_ros_driver/params/homography_mapping.yaml" doc="Mapping of camera pairs" />
  <arg name="dynamicParams" default="$(find uvc_ros_driver)/launch/rqt_config/param_config.yaml" doc="The dynamic parameters set at startup" />

  <!-- camera node -->
  <node pkg="uvc_ros_driver" name="uvc_camera" type="uvc_ros_driver_node" output="screen">
    <param name="numberOfCameras" type="int"  value="$(arg numberOfCameras)" />
    <param name="calibrationMode" type="bool"  value="$(arg calibrationMode)" />
    <param name="cameraConfigFile" type="string"  value="$(arg cameraConfigFile)" />
    <rosparam command="load" file="$(arg homographyMapping)" />
  </node>
  
  <node pkg="dynamic_reconfigure" name="reconfigure_node_0" type="dynparam" args="load /uvc_camera $(arg dynamicParams)" output="screen"/>

</launch>
